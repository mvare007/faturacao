<%= form_with model: company, method: method, local: true do |f| %>

  <div class="form-group mb-3">
    <label class="form-label required"><%= t(:name) %></label>
    <div>
      <%= f.text_field :name, class: 'form-control', placeholder: t(:name) %>
    </div>
  </div>

  <div class="form-group mb-3">
    <label class="form-label required"><%= Company.human_attribute_name(:address) %></label>
    <div>
      <%= f.text_field :address, class: 'form-control', placeholder: Company.human_attribute_name(:address) %>
    </div>
  </div>

  <div class="form-group mb-3">
    <label class="form-label required"><%= Company.human_attribute_name(:zip_code) %></label>
    <div>
      <%= f.text_field :zip_code, class: 'form-control', placeholder: Company.human_attribute_name(:zip_code) %>
    </div>
  </div>

  <div class="form-group mb-3">
    <label class="form-label required"><%= Company.human_attribute_name(:location) %></label>
    <div>
      <%= f.text_field :location, class: 'form-control', placeholder: Company.human_attribute_name(:location) %>
    </div>
  </div>

  <div class="form-group mb-3">
    <label class="form-label required"><%= Company.human_attribute_name(:nif) %></label>
    <div>
      <%= f.number_field :nif, class: 'form-control', placeholder: Company.human_attribute_name(:nif) %>
    </div>
  </div>

  <div class="form-group mb-3">
    <label class="form-label"><%= Company.human_attribute_name(:license_number) %></label>
    <div>
      <%= f.text_field :license_number, class: 'form-control', placeholder: Company.human_attribute_name(:license_number) %>
    </div>
  </div>

  <%= render 'companies/partials/company_users_edit_table', f: f %>

  <div class="form-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t(:go_back), companies_path, class: 'btn btn-light'  %>
  </div>

<% end %>
